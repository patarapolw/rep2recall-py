{
  "name": "rep2recall.py",
  "version": "0.5.0",
  "main": "public/electron.js",
  "author": "Pacharapol Withayasakpunt <patarapolw@gmail.com>",
  "description": "Rep2Recall with Python",
  "license": "MIT",
  "dependencies": {
    "dotenv": "^8.0.0",
    "electron-is-running-in-asar": "^1.0.0",
    "get-port": "^5.0.0",
    "wait-on": "^3.3.0"
  },
  "devDependencies": {
    "electron": "^13.6.6",
    "electron-builder": "^21.2.0"
  },
  "build": {
    "appId": "io.github.patarapolw.rep2recall-py",
    "directories": {
      "output": "release"
    },
    "mac": {
      "category": "public.app-category.education",
      "icon": "icon.png"
    },
    "files": [
      "public/**/*",
      "www/**/*",
      "dist/pyserver",
      "package.json"
    ],
    "asarUnpack": [
      "www/**/*",
      "dist/pyserver"
    ]
  },
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "poetry run python -m rep2recall",
    "py:build": "poetry run pyinstaller -wF pyserver.py"
  }
}
